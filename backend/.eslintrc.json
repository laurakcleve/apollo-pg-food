{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier/react"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": "off",
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 85,
        "trailingComma": "es5",
        "singleQuote": true,
        "arrowParens": "always"
      }
    ]
  }
}
